/* style.css */

@import url(https://fonts.googleapis.com/css?family=Homenaje);

*:before, *:after, *
  box-sizing: border-box

*
  margin: 0
  padding: 0

html, body, #main
  height: 100%
  width: 100%

body
  background: #2c3e50

body, input, button
  font-size: 1.5em
  font-family: 'Homenaje', sans-serif

input, button
  display: block
  margin: 10px auto
  height: 2em
  width: 80%
  text-align: center

#popup
  display: none
  opacity: 0

#close
  position: fixed
  top: 10px
  right: 10px
  color: red
  font-size: 1.5em
  text-decoration: none
